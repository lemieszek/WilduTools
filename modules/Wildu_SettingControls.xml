<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<Script file="Wildu_SettingControls.lua"/>
	<Frame name="WilduSettingsListElementTemplate" mixin="WilduSettingsListElementMixin" virtual="true">
		<Frames>
			<Frame parentKey="Tooltip" mixin="WilduDefaultTooltipMixin">
				<Anchors>
					<Anchor point="TOPLEFT"/>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" />
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="HoverBackground" inherits="HoverBackgroundTemplate"/>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad method="OnLoad"/>
				</Scripts>
			</Frame>
			<Frame parentKey="NewFeature" inherits="NewFeatureLabelTemplate" frameStrata="HIGH" scale=".8" frameLevel="100" hidden="true">
				<Size x="1" y="1"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="16" y="-10" relativeKey="$parent.Text" relativePoint="LEFT"/>
				</Anchors>
			</Frame>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Text" inherits="GameFontNormal" justifyH="LEFT" wordwrap="false"/>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="WilduSettingsCheckboxControlTemplate" inherits="WilduSettingsListElementTemplate" mixin="WilduSettingsCheckboxControlMixin" virtual="true">
		<Size x="240" y="22"/>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>
</Ui>