<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
    <Frame name="WilduSettings_ColorControlTemplate" inherits="SettingsListElementTemplate" mixin="WilduSettings_ColorControlMixin" virtual="true">
        <Size x="280" y="26"/>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
        <Frames>
            <Button parentKey="ColorSwatch" inherits="ColorSwatchTemplate" scale="1.5">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Text" relativePoint="TOPLEFT" x="135" y="3"/>
                </Anchors>
            </Button>
        </Frames>
    </Frame>
    <Frame name="WilduSettings_ButtonControlTemplate" inherits="SettingsListElementTemplate" mixin="WilduSettings_ButtonControlMixin" virtual="true">
        <Size x="280" y="26"/>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
        <Frames>
            <Button parentKey="Button" inherits="UIPanelButtonTemplate">
                <Size x="200" y="26"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent" relativePoint="CENTER" x="-80" y="0"/>
                </Anchors>
            </Button>
        </Frames>
    </Frame>
    <Frame name="WilduSettings_MultiButtonControlTemplate" inherits="SettingsListElementTemplate" mixin="WilduSettings_MultiButtonControlMixin" virtual="true">
        <Size x="280" y="26"/>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
        <Frames>
            <Frame parentKey="ButtonContainer">
                <Size x="370" y="26"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent" relativePoint="CENTER" x="-80" y="0"/>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        self.buttonPool = CreateFramePool('Button', self, 'UIPanelButtonTemplate');
                    </OnLoad>
                </Scripts>
            </Frame>
        </Frames>
    </Frame>
    <Frame name="WilduSettings_TextTemplate" mixin="WilduSettings_TextMixin" virtual="true">
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Text" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="7" y="0"/>
                        <Anchor point="RIGHT" x="-7"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
    <Frame name="WilduSettings_HeaderTemplate" mixin="WilduSettings_HeaderMixin" virtual="true">
        <Size y="45"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Title" inherits="GameFontHighlightLarge" justifyH="LEFT" justifyV="TOP">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="7" y="-16"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>
</Ui>